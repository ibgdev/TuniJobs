{% extends 'base.html.twig' %}

{% block title %}
	{{ company.nom }}
	- Détails de l'entreprise
{% endblock %}

{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('styles/Condicompany.css') }}">
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
{% endblock %}

{% block body %}
	{% include 'navbar.html.twig' %}

	<div class="containerr">
		<div
			class="company-details-container">
			<!-- Left side - Hero section with logo and name -->
			<div class="company-hero">
				<div class="logo-container">
					<img src="{{ company.logoUrl }}" alt="Logo de l'entreprise" class="company-logo">
					<div class="logo-shadow"></div>
				</div>
				<h1 class="company-title">{{ company.nom }}</h1>
				<div class="company-divider"></div>
				<button class="contact-btn">Contacter</button>
			</div>

			<!-- Right side - Company details in grid layout -->
			<div class="company-info">
				<h2 class="info-section-title">Détails de l'entreprise</h2>

				<div class="info-grid">
					<div class="info-card">
						<div class="info-icon">
							<svg xmlns="http://www.w3.org/2000/svg" viewbox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" d="M9 3.75H6.912a2.25 2.25 0 00-2.15 1.588L2.35 13.177a2.25 2.25 0 00-.1.661V15a2.25 2.25 0 002.25 2.25h15A2.25 2.25 0 0021.75 15v-1.162c0-.224-.034-.447-.1-.661L19.24 5.338a2.25 2.25 0 00-2.15-1.588H15M2.25 13.5h3.86a2.25 2.25 0 012.012 1.244l.256.512a2.25 2.25 0 002.013 1.244h3.218a2.25 2.25 0 002.013-1.244l.256-.512a2.25 2.25 0 012.013-1.244h3.859"/>
							</svg>
						</div>
						<div class="info-content">
							<h3>Matricule Fiscale</h3>
							<p>{{ company.MatriculeFiscale }}</p>
						</div>
					</div>

					<div class="info-card">
						<div class="info-icon">
							<svg xmlns="http://www.w3.org/2000/svg" viewbox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" d="M20.25 14.15v4.25c0 1.094-.787 2.036-1.872 2.18-2.087.277-4.216.42-6.378.42s-4.291-.143-6.378-.42c-1.085-.144-1.872-1.086-1.872-2.18v-4.25m16.5 0a2.18 2.18 0 00.75-1.661V8.706c0-1.081-.768-2.015-1.837-2.175a48.114 48.114 0 00-3.413-.387m4.5 8.006c-.194.165-.42.295-.673.38A23.978 23.978 0 0112 15.75c-2.648 0-5.195-.429-7.577-1.22a2.016 2.016 0 01-.673-.38m0 0A2.18 2.18 0 013 12.489V8.706c0-1.081.768-2.015 1.837-2.175a48.111 48.111 0 013.413-.387m7.5 0V5.25A2.25 2.25 0 0013.5 3h-3a2.25 2.25 0 00-2.25 2.25v.894m7.5 0a48.667 48.667 0 00-7.5 0M12 12.75h.008v.008H12v-.008z"/>
							</svg>
						</div>
						<div class="info-content">
							<h3>Secteur</h3>
							<p>{{ company.secteur }}</p>
						</div>
					</div>

					<div class="info-card">
						<div class="info-icon">
							<svg xmlns="http://www.w3.org/2000/svg" viewbox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 11-6 0 3 3 0 016 0z"/>
								<path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1115 0z"/>
							</svg>
						</div>
						<div class="info-content">
							<h3>Adresse</h3>
							<p>{{ company.adresse }}</p>
						</div>
					</div>

					<div class="info-card">
						<div class="info-icon">
							<svg xmlns="http://www.w3.org/2000/svg" viewbox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" d="M12 21a9.004 9.004 0 008.716-6.747M12 21a9.004 9.004 0 01-8.716-6.747M12 21c2.485 0 4.5-4.03 4.5-9S14.485 3 12 3m0 18c-2.485 0-4.5-4.03-4.5-9S9.515 3 12 3m0 0a8.997 8.997 0 017.843 4.582M12 3a8.997 8.997 0 00-7.843 4.582m15.686 0A11.953 11.953 0 0112 10.5c-2.998 0-5.74-1.1-7.843-2.918m15.686 0A8.959 8.959 0 0121 12c0 .778-.099 1.533-.284 2.253m0 0A17.919 17.919 0 0112 16.5c-3.162 0-6.133-.815-8.716-2.247m0 0A9.015 9.015 0 013 12c0-1.605.42-3.113 1.157-4.418"/>
							</svg>
						</div>
						<div class="info-content">
							<h3>Site Web</h3>
							<p>
								{% if company.siteweb %}
									<a href="{{ company.siteweb }}" target="_blank">{{ company.siteweb }}</a>
								{% else %}
									<span class="badge">N/A</span>
								{% endif %}
							</p>
						</div>
					</div>

					<div class="info-card">
						<div class="info-icon">
							<svg xmlns="http://www.w3.org/2000/svg" viewbox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 002.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 01-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 00-1.091-.852H4.5A2.25 2.25 0 002.25 4.5v2.25z"/>
							</svg>
						</div>
						<div class="info-content">
							<h3>Téléphone</h3>
							<p>{{ company.telephone }}</p>
						</div>
					</div>

					<div class="info-card">
						<div class="info-icon">
							<svg xmlns="http://www.w3.org/2000/svg" viewbox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" d="M15 19.128a9.38 9.38 0 002.625.372 9.337 9.337 0 004.121-.952 4.125 4.125 0 00-7.533-2.493M15 19.128v-.003c0-1.113-.285-2.16-.786-3.07M15 19.128v.106A12.318 12.318 0 018.624 21c-2.331 0-4.512-.645-6.374-1.766l-.001-.109a6.375 6.375 0 0111.964-3.07M12 6.375a3.375 3.375 0 11-6.75 0 3.375 3.375 0 016.75 0zm8.25 2.25a2.625 2.625 0 11-5.25 0 2.625 2.625 0 015.25 0z"/>
							</svg>
						</div>
						<div class="info-content">
							<h3>Responsable</h3>
							<p>
								{% if company.responsable %}
									{{ company.responsable.nom }}
								{% else %}
									<span class="badge">Non assigné</span>
								{% endif %}
							</p>
						</div>
					</div>
				</div>

				<!-- Job Offers Section -->
			</div>
		</div>
		<div class="company-job-offers">
			<h2 class="info-section-title">
				<i class="fas fa-briefcase me-2"></i>Offres d'emploi
			</h2>

			{% if offers is empty %}
				<div class="empty-state">
					<i class="fas fa-file-alt"></i>
					<h3>Aucune offre d'emploi disponible</h3>
					<p>Cette entreprise n'a pas encore publié d'offres d'emploi.</p>
				</div>
			{% else %}
				<div class="job-grid">
					{% for jobOffer in offers %}
						<div class="job-card">
							<div class="card-header">
								<h2 class="job-title">{{ jobOffer.titre }}</h2>
								<span class="job-category">
									{{ jobOffer.categorie.nom ?? 'Sans catégorie' }}
								</span>
								<span class="job-salary">
									<i class="fas fa-money-bill-wave"></i>
									{{ jobOffer.salaire }}
									TND
								</span>
							</div>

							<div class="card-body">
								<p class="job-description">
									{{ jobOffer.description|length > 200 ? jobOffer.description|slice(0, 50) ~ '...' : jobOffer.description }}
								</p>

								<div class="job-meta">
									<span class="job-meta-item">
										<i class="fas fa-calendar-alt"></i>
										Publié le
										{{ jobOffer.datePublication|date('d/m/Y') }}
									</span>
								</div>
							</div>

							<div class="card-footer">
								<a href="{{ path("job.details", {id: jobOffer.id}) }}" class="btn btn-outline">
									<i class="fas fa-eye"></i>
									Détails
								</a>
								<form method="get" action="{{ path("app_application", {id: jobOffer.id}) }}">
									<input type="hidden" name="_token" value="{{ csrf_token('apply' ~ jobOffer.id) }}">
									<button type="submit" class="btn btn-apply text-light">
										<i class="fas fa-paper-plane"></i>
										Postuler
									</button>
								</form>
							</div>
						</div>
					{% endfor %}
				</div>
			{% endif %}
		</div>

<!-- Replace the current testimonials section with this improved version -->
<div class="company-testimonials mt-5">
    <h2 class="info-section-title">
        <i class="fas fa-comment-dots me-2"></i>Témoignages
    </h2>

    {% if reviews is empty %}
        <div class="empty-state">
            <i class="fas fa-comment-slash"></i>
            <h3>Aucun témoignage disponible</h3>
            <p>Cette entreprise n'a pas encore reçu de témoignages de ses utilisateurs.</p>
        </div>
    {% else %}
        <div class="job-grid">
            {% for review in reviews %}
                <div class="job-card review-card">
                    <div class="card-header">
                        <div class="review-header">
                            <div class="review-user-info">
                                <strong class="review-user-name">{{ review.utilisateur.nom }}</strong>
                                <span class="review-date">{{ review.createdAt|date('d/m/Y') }}</span>
                            </div>
                            <div class="review-stars">
                                {% for i in 1..5 %}
                                    {% if i <= review.note %}
                                        <span class="star filled">★</span>
                                    {% else %}
                                        <span class="star">☆</span>
                                    {% endif %}
                                {% endfor %}
                            </div>
                        </div>
                    </div>

                    <div class="card-body">
                        <p class="job-description">"{{ review.commentaire }}"</p>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endif %}
</div>
		
	</div>
	{% include 'footer.html.twig' %}

	{% block javascripts %}
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
	{% endblock %}
{% endblock %}
