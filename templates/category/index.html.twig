{% extends 'base.html.twig' %}

{% block title %}Categories
{% endblock %}

{% block body %}
	<div class="container mt-4">
		<h1 class="mb-4">Les categories</h1>
		<div class="mt-4 mb-4">
			<span>Ajouter une Categorie :
			</span>
			<a href="{{ path('category.add') }}" class="btn btn-success btn-sm">Ajouter</a>
		</div>
		<div class="table-responsive">
			<table class="table table-striped table-hover">
				<thead class="table-success">
					<tr>
						<th scope="col">Nom</th>
						<th scope="col">Actions</th>
					</tr>
				</thead>
				<tbody>
					{% for categ in categories %}
						<tr>
							<td>{{ categ.nom }}</td>
							<td>
								<a href="{{ path('category.edit', {'id': categ.id}) }}" class="btn btn-primary btn-sm">Modifier</a>
								<a href="{{ path('category.delete', {'id': categ.id}) }}" class="btn btn-danger btn-sm">Supprimer</a>
							</td>
						</tr>
					{% else %}
						<tr>
							<td colspan="3" class="text-center text-muted">Aucune Categorie trouv√©e.</td>
						</tr>
					{% endfor %} 
				</tbody>
			</table>
		</div>
	</div>
{% endblock %}
