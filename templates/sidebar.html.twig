{% extends 'base.html.twig' %}

{% block body %}
	{% block stylesheets %}
		<link rel="stylesheet" href="{{ asset('styles/sidebar.css') }}">
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
	{% endblock %}

<!-- Sidebar Admin -->
<nav id="sidebar" class="sidebar d-flex flex-column">
    <div class="sidebar-header text-center py-4">
        <a href="{{ path('app_home') }}">
            <img src="{{ asset('images/logoTuni.png') }}" alt="TuniJobs Logo" style="max-width: 110px;">
        </a>
    </div>

    <ul class="sidebar-menu list-unstyled flex-grow-1 mt-4">
        <li class="sidebar-item">
            <a href="{{ path('company.all') }}" class="sidebar-link">
                <i class="fas fa-building"></i>
                <span>Entreprises</span>
            </a>
        </li>
        <li class="sidebar-item">
            <a href="{{ path('category.all') }}" class="sidebar-link">
                <i class="fas fa-folder-open"></i>
                <span>Catégories</span>
            </a>
        </li>
        <li class="sidebar-item">
            <a href="{{ path('admin.users') }}" class="sidebar-link">
                <i class="fas fa-users"></i>
                <span>Utilisateurs</span>
            </a>
        </li>
        <li class="sidebar-item">
            <a href="{{ path('admin.jobs') }}" class="sidebar-link">
                <i class="fas fa-briefcase"></i>
                <span>Offres d'emploi</span>
            </a>
        </li>
    </ul>

    <!-- Profile and Logout at the bottom -->
    <div class="sidebar-bottom-links text-center py-3">
        <a href="{{ path('app_account') }}" class="sidebar-link d-flex align-items-center justify-content-center mb-2">
            <i class="fas fa-user"></i>
            <span>{{ app.user.nom }}</span>
        </a>
        <a href="{{ path('app_logout') }}" class="sidebar-link logout-link d-flex align-items-center justify-content-center">
            <i class="fas fa-sign-out-alt"></i>
            <span>Déconnexion</span>
        </a>
    </div>
</nav>

	{% block javascripts %}
	{% endblock %}
{% endblock %}
