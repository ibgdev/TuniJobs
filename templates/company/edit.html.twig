{% extends 'base.html.twig' %}

{% block title %}Modifier une entreprise{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .content-wrapper {
            margin-left: 250px; /* Adjust the width for the sidebar */
            padding: 20px;
        }

        .container {
            max-width: 960px;
            margin-top: 30px;
        }

        .form-wrapper {
            background-color: #f8f9fa;
            border-radius: 10px;
            padding: 30px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

        .form-wrapper h1 {
            font-size: 1.5rem;
            font-weight: bold;
            margin-bottom: 20px;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .form-control {
            border-radius: 5px;
            padding: 10px;
            border: 1px solid #ddd;
        }

        .btn-save {
            background-color: #4361ee;
            color: white;
        }

        /* Responsive design for small screens */
        @media (max-width: 768px) {
            .content-wrapper {
                margin-left: 0;
            }

            .container {
                padding: 15px;
            }
        }
    </style>
{% endblock %}

{% block body %}
    {% include 'sidebar.html.twig' %}
    <div class="content-wrapper">
        <div class="container mt-5">
            <div class="form-wrapper">
                <h1>Modifier une entreprise</h1>
                {{ form_start(form) }}
                    <div class="form-group">
                        {{ form_label(form.nom, 'Nom de l\'entreprise', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.nom) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.matriculeFiscale, 'Matricule Fiscale', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.matriculeFiscale, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.matriculeFiscale) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.secteur, 'Secteur d\'activité', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.secteur, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.secteur) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.adresse, 'Adresse', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.adresse, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.adresse) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.siteweb, 'Site web', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.siteweb, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.siteweb) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.telephone, 'Téléphone', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.telephone, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.telephone) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.logo_url, 'Logo URL', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.logo_url, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.logo_url) }}
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
