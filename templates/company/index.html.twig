{% extends 'base.html.twig' %}

{% block title %}All Companies{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="mb-4">Les Companies</h1>
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-primary">
                    <tr>
                        <th scope="col">Nom</th>
                        <th scope="col">Responsable</th>
                        <th scope="col">Matricule Fiscle</th>
                    </tr>
                </thead>
                <tbody>
                    {% for company in companies %}
                        <tr>
                            <td>{{ company.nom }}</td>
                            <td>{{ company.responsable.nom }}</td> 
                            <td>{{ company.matriculeFiscle }}</td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="3" class="text-center text-muted">Aucune entreprise trouv√©e.</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
